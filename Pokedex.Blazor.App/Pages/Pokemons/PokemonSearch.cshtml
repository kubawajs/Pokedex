@page "/pokemons/search"

<h2>Pokemon search by Id</h2>

<div class="row">
    <div class="col-lg-6">
        <div class="input-group">
            <span class="input-group-btn">
                <button class="btn btn-default" type="button" onclick="@StateHasChanged">Find pokemon!</button>
            </span>
            <input type="text" class="form-control" placeholder="Search for..."  bind="@_searchNumber" />
        </div>
    </div>
</div>

<PokemonDetails Id="@_searchNumber"></PokemonDetails>

@functions
{
    private int _searchNumber;
}
